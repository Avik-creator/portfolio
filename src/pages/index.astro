---
import Button from "../components/button.astro";
import Projects from "../components/home/projects.astro";
import Separator from "../components/home/separator.astro";
import Writings from "../components/home/writings.astro";
import Layout from "../layouts/main.astro";
import SpeedInsights from '@vercel/speed-insights/astro';

---

<Layout title="Avik Mukherjee">
  
  <div
    class="relative z-20 w-full max-w-4xl mx-auto mt-16 px-7 md:mt-24 lg:mt-32 xl:px-0"
  >
    <div class="flex flex-col items-center md:flex-row">
      <div class="relative w-full md:w-1/2">
        <h2
          class="mb-5 text-2xl font-bold leading-tight md:text-4xl lg:text-5xl dark:text-white"
          >Hello!, I'm Avik, a <span id="developer">Developer</span> based in India</h2>
        <p class="mb-3 text-base text-neutral-600 dark:text-neutral-400">
          I love building tools that are user-friendly, efficient, and innovative.
        </p>
        <p class="mb-3 text-base text-neutral-600 dark:text-neutral-400">
          I am former child, frontend developer at Auctopus Technologies and Dank. I am a self taught <span id="frontend">frontend</span>, <span id="backend">backend</span> and a <span id="App">App(currently learning)</span> Developer.
        </p>
        <p class="mb-3 text-base text-neutral-600 dark:text-neutral-400">
          Through these experiences, I had the opportunity to work with both small and large, specialized and cross-functional teams across different time zones and developed a working style that leans towards <span id="flexibility">flexibility</span>, <span id="clarity">clarity</span> and <span id="collaboration">collaboration</span>
        </p>
        
        <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
          I am currently looking for a new role as a Developer. <span id="hire-me" class="bg-gradient-to-r from-orange-600 via-green-500 to-amber-400 inline-block text-transparent bg-clip-text">Hire me?</span>
        </p>
        <p class="mb-2 font-semibold text-neutral-800 dark:text-neutral-200">
          I can help you out with:
        </p>
        <ul
          class="py-2 space-y-[3px] text-sm list-disc list-inside text-neutral-500 dark:text-neutral-400"
        >
          <li>React.js Development</li>
          <li>Next.js Development</li>
          <li>Node.js Development</li>
          <li>SwiftUI Development</li>
          <li>and more...</li>
        </ul>
        <Button text="ðŸ”­ See My Resume" link="https://drive.google.com/file/d/1t7rV7iL67arQ9wK8Bi2BvrXIMjfMpBFm/view?usp=sharing" />
      </div>
      <div
        class="relative justify-end hidden w-full mt-10 md:flex md:pl-10 md:w-1/2 md:mt-0 md:translate-y-4 xl:translate-y-0"
      >
        <div class="relative z-50 w-full">
          <div
            class="absolute bottom-0 z-40 w-16 h-16 -translate-x-6 -translate-y-1/2 lg:top-auto top-0 lg:-translate-y-[330px] rounded-full"
          >
            <span
              class="relative z-20 flex items-center justify-center w-full h-full text-2xl border-8 border-white rounded-full dark:border-neutral-950 bg-neutral-100 dark:bg-neutral-900"
            >
              <span
                class="flex items-center justify-center w-full h-full bg-white border border-dashed rounded-full dark:bg-neutral-950 border-neutral-300 dark:border-neutral-700"
                >ðŸ‘‹</span
              >
            </span>
          </div>
          <div class="relative z-30 px-10">
            <img
              src="/assets/images/Hero.png"
              loading="eager"
              decoding="auto"
              class="relative z-30 w-full aspect-[860/1300] md:max-w-md mx-auto dark:-translate-y-0.5"
            />
          </div>
          <div
            class="absolute bottom-0 right-0 z-20 w-full h-full lg:h-[420px] translate-x-0 -translate-y-px border border-dashed rounded-2xl bg-gradient-to-r dark:from-neutral-950 dark:via-black dark:to-neutral-950 from-white via-neutral-50 to-white border-neutral-300 dark:border-neutral-700"
          >
          </div>
        </div>
      </div>
    </div>
  </div>

  <Separator text="Check out my projects" />
  <Projects />
  <Separator text="Some of my writing" />
  <Writings />

  <SpeedInsights/>
</Layout>


<script>
  import { annotate } from "rough-notation";

  const hireme = document.getElementById("hire-me")
  const developer = document.getElementById("developer")
  const frontend = document.getElementById("frontend")
  const backend = document.getElementById("backend")
  const App = document.getElementById("App")
  const flexibility = document.getElementById("flexibility")
  const clarity = document.getElementById("clarity")
  const collaboration = document.getElementById("collaboration")

  if(hireme && frontend && backend && App && flexibility && clarity && collaboration && developer){
    const annotation = annotate(hireme, { type: "circle", color: "yellow", multiline: true, animationDuration: 10000, animate: true });
    const frontendAnnotation = annotate(frontend, { type: "highlight", color: "#BEF264", multiline: true, animationDuration: 10000, animate: true });
    const backendAnnotation = annotate(backend, { type: "highlight", color: "#FDA4AF", multiline: true, animationDuration: 10000, animate: true });
    const AppAnnotation = annotate(App, { type: "highlight", color: "yellow", multiline: true, animationDuration: 10000, animate: true });
    const flexibilityAnnotation = annotate(flexibility, { type: "highlight", color: "#FDA4AF", multiline: true, animationDuration: 10000, animate: true });
    const clarityAnnotation = annotate(clarity, { type: "highlight", color: "yellow", multiline: true, animationDuration: 10000, animate: true });
    const collaborationAnnotation = annotate(collaboration, { type: "highlight", color: "#BEF264", multiline: true, animationDuration: 10000, animate: true });
    const developerAnnotation = annotate(developer, { type: "highlight", color: "#FBCFE8", multiline: true, animationDuration: 10000, animate: true });
    annotation.show();
    frontendAnnotation.show();
    developerAnnotation.show();
    backendAnnotation.show();
    AppAnnotation.show();
    flexibilityAnnotation.show();
    clarityAnnotation.show();
    collaborationAnnotation.show();
  }

</script>